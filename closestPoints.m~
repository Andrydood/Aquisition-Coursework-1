function [ transform ] = closestPoints( mesh1,mesh2 )

    %Get data from the 2 meshes
    originalPoints1 = mesh1.Location;
    originalPoints2 = mesh2.Location;
    
    meshSize1 = mesh1.Count;
    meshSize2 = mesh2.Count;
    
    %Randomly subsample from the meshes using 1/10th of the data available
    pointAmount = ceil(mesh1.Count/10);
    
    points1 = zeros(pointAmount,3);
    points2 = zeros(pointAmount,3);
    
    for i = 1:pointAmount
        
        points1(i,:) = oiriginalPoints1(
        points2(i,:) = 
        
    end
    
    closestPoints = zeros(meshSize1,1);
    
    for p = 1 : meshSize1
        
        currentPoint = ones(meshSize2,3).*points1(p,:);
        
        difference = sum(abs(currentPoint - points2),2);
        
        [minVal minInd] = min(difference);

        closestPoints(p,:) = minInd;
            
    end
    

    transform = affine3d(eye(4));

end

